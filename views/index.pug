extends layout

block content
    .container
        .row.vh-100.d-flex.justify-content-center.align-items-center
            .col-md-8
                .card
                    .card-header.text-center
                        h5 Live Chat
                    .card-body.overflow-auto(style="height:20rem;")
                        ul#messages.list-group
                            
                    .card-footer
                        form.input-group(action="")
                            input#message-input.form-control(type='text', placeholder='type a message')
                            input#send-message.btn.btn-outline-primary(type="submit", value="send")

//- my script
block myScript 
    script(src="js/index.js")