extends layout

block content
    .container 
        .row.vh-100.d-flex.justify-content-center.align-items-center
            .col-md-8
                .card 
                    .card-header.text-center 
                        h4 Login
                    .card-body
                        form.form-floating
                            input#input-username.form-control(type="text", name="Username", placeholder="Username")
                            label(for="input-username") Username 
                            input.btn.btn-outline-primary.w-100.mt-3(type="submit", value="Login")
                        
block myScript 
    script(src="js/login.js") 